package com.demo.model;

import com.demo.exceptionclass.LowAttendence;

public class Student {
	
	private int rollno;
	private String sname;
	private String course;
	private double attendance_percentage;
	private double score;
	
	public Student() {
		super();
	}
	
	public Student(int rollno, String sname, String course, double attendance_percentage, double score) {
		super();
		this.rollno = rollno;
		this.sname = sname;
		this.course = course;
		this.attendance_percentage = attendance_percentage;
		this.score = score;
	}

	@Override
	public String toString() {
		return "Student [rollno=" + rollno + ", sname=" + sname + ", course=" + course + ", attendance_percentage="
				+ attendance_percentage + ", score=" + score + "]";
	}
	
	
	public String calculateGrade() throws LowAttendence
	{
		if(attendance_percentage < 60)
		{
			throw new LowAttendence("Not elligible");
		}
		
		
		if(score > 90)
		{
			return "A+";
		}else if(score > 80) {
			return "A";
		}else if(score > 70) {
			return "B";
		}else if(score > 60) {
			return "C";
		}else {
			return "D";
		}
	}
	
	

}
